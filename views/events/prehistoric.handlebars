<section class="era-section prehistoric-era" data-era="prehistoric">
    <div class="era-overlay"></div>
    <div class="era-content">
        <h2 class="era-title" data-animation="rockFormation">Prehistoric Era</h2>
        <div class="era-description">
            <p class="era-text" data-animation="timeSplit">Journey back millions of years to experience the raw power of Earth's ancient past.</p>
        </div>

        <div class="era-features">
            <div class="feature-card" data-animation="timeWarp">
                <i class="fas fa-dragon"></i>
                <h3>Dinosaur Safari</h3>
                <p>Witness magnificent creatures that once ruled the Earth</p>
                <div class="time-portal-effect"></div>
            </div>

            <div class="feature-card" data-animation="timeWarp">
                <i class="fas fa-campground"></i>
                <h3>Cave Paintings Workshop</h3>
                <p>Create your own prehistoric art using ancient techniques</p>
                <div class="time-portal-effect"></div>
            </div>

            <div class="feature-card" data-animation="timeWarp">
                <i class="fas fa-fire"></i>
                <h3>Primitive Skills</h3>
                <p>Learn fire-making and basic survival skills</p>
                <div class="time-portal-effect"></div>
            </div>
        </div>

        <div class="era-timeline">
            <div class="timeline-point" data-animation="timeRipple">
                <span class="time">65 MYA</span>
                <h4>Late Cretaceous</h4>
                <p>Experience the end of the dinosaur era</p>
            </div>
            <div class="timeline-point" data-animation="timeRipple">
                <span class="time">150 MYA</span>
                <h4>Jurassic Period</h4>
                <p>Meet the largest land animals ever</p>
            </div>
            <div class="timeline-point" data-animation="timeRipple">
                <span class="time">250 MYA</span>
                <h4>Triassic Period</h4>
                <p>Witness the rise of dinosaurs</p>
            </div>
        </div>
    </div>
</section> 