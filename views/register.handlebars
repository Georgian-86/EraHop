<section class="registration-section">
    <div class="registration-container">
        <h2>Register for {{event.name}}</h2>
        <form action="/events/register/{{event.id}}" method="POST" class="registration-form">
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" name="phone" required>
            </div>
            
            <div class="event-details">
                <p><strong>Event:</strong> {{event.name}}</p>
                <p><strong>Time:</strong> {{event.time}}</p>
                <p><strong>Location:</strong> {{event.location}}</p>
                <p><strong>Available Spots:</strong> {{subtract event.capacity event.registrations}}</p>
            </div>
            
            <button type="submit" class="submit-button">Confirm Registration</button>
        </form>
    </div>
</section> 