<section class="time-map-section">
    <div class="map-container">
        <h2 class="section-title">Time Travel Map</h2>
        <div class="interactive-map" id="timeMap">
            <!-- Map will be initialized here -->
            <div class="map-overlay">
                <div class="era-markers">
                    <div class="map-marker prehistoric" data-location="Jurassic Valley">
                        <i class="fas fa-mountain"></i>
                        <span>Prehistoric Zone</span>
                    </div>
                    <div class="map-marker medieval" data-location="Castle Grounds">
                        <i class="fas fa-chess-rook"></i>
                        <span>Medieval Kingdom</span>
                    </div>
                    <div class="map-marker future" data-location="Tech Hub">
                        <i class="fas fa-robot"></i>
                        <span>Future City</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="map-controls">
            <button class="era-filter active" data-era="all">All Eras</button>
            <button class="era-filter" data-era="prehistoric">Prehistoric</button>
            <button class="era-filter" data-era="medieval">Medieval</button>
            <button class="era-filter" data-era="future">Future</button>
        </div>
    </div>
</section> 