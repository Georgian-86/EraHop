<div class="error-container">
    <h1>Error</h1>
    <p>{{message}}</p>
    {{#if stack}}
        <pre class="error-stack">{{stack}}</pre>
    {{/if}}
    {{#if error}}
        <pre class="error-details">{{error}}</pre>
    {{/if}}
</div>

<style>
.error-container {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
}

.error-stack, .error-details {
    background: #f8f8f8;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin-top: 1rem;
}
</style> 